<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aleksejev_Xamarin.Valgusfoor">
    <ContentPage.Content>
        <StackLayout>
            
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Valgusfoor" HorizontalOptions="Center" TextColor="White" FontSize="36"></Label>
            </Frame>
            <Frame x:Name="punane" CornerRadius="90" Margin="100,0" BackgroundColor="Red" VerticalOptions="FillAndExpand">
                <Label Text="Punane" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            </Frame>
            <Frame x:Name="kollane" CornerRadius="90" Margin="100,0" BackgroundColor="Yellow" VerticalOptions="FillAndExpand">
                <Label Text="Kollane" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            </Frame>
            <Frame x:Name="roheline" CornerRadius="90" Margin="100,0" BackgroundColor="Green" VerticalOptions="FillAndExpand">
                <Label Text="Roheline" HorizontalOptions="Center" VerticalOptions="Center"></Label>
            </Frame>
            
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>